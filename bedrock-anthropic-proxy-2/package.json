{
  "name": "bedrock-anthropic-proxy",
  "version": "1.0.0",
  "description": "HTTP proxy for Anthropic Messages API to AWS Bedrock using Bun + TypeScript + Hono",
  "type": "module",
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun run --watch src/server.ts",
    "build-linux-x64": "bun build src/server.ts --compile --target=bun-linux-x64 --outfile build-linux-x64/bedrock-proxy",
    "build-darwin-arm64": "bun build src/server.ts --compile --target=bun-darwin-arm64 --outfile build-darwin-arm64/bedrock-proxy",
    "build-windows-x64": "bun build src/server.ts --compile --target=bun-windows-x64 --outfile build-windows-x64/bedrock-proxy.exe",
    "build-no-runtime": "bun build src/server.ts --target=bun --minify --outfile dist/server.js",
    "check": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "dependencies": {
    "@anthropic-ai/bedrock-sdk": "^0.26.0",
    "@anthropic-ai/sdk": "^0.71.2",
    "hono": "^4.4.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "bun-types": "latest",
    "typescript": "^5.6.3"
  }
}